

// Array Based Approach
const streamReduce = (state[],action) =>{
    switch(action.type){
        case EDIT_STREAM:
            return state.map(stream =>{
                if(stream.id===action.payload.id){
                    return action.payload
                }else{
                    return stream
                }
            })
        default:
            return state
    }
}

// Object Based approach

    const streamReduce = (state{},action) =>{
        switch(action.type){
        case EDIT_STREAM:

            //const newState = {...state}
            //newState[action.payload.id] = action.payload
            //return newState
            
            //Alternative way Crazy ES2015 syntex single lines
            return {...state,[action.payload.id]:action.payload.id}]

        default:
            return state
    }


{...state,[action.payload.id]:action.payload.id}] // key interpolation syntax

key interpolation syntax

const animalSound = {cat:'meo',dog:'berk'}

const animal = 'lion'
const sound = 'roar'

{...animalSound ,[animal]:sound}   // output : {cat: "meo", dog: "berk", lion: "roar"}